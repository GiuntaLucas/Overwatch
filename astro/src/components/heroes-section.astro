---
import HeroRoleIcon from "./hero-role-icon.astro";

const { heroes } = Astro.props;
---

<div class="flex flex-wrap items-center justify-center">
  {
    heroes.map((x) => (
      <a href={'/hero/' + x.id}>
        <div class="card text-white bg-black m-2 fadeIn">
          <div class="p-5">
            <img
              class=""
              width="70px"
              height="150px"
              src={x.imageProfile}
              alt=""
            />
          </div>
          <div class="card-footer flex justify-between items-center px-2">
            <HeroRoleIcon roleId={x.roleId} />
            <span>{x.name}</span>
          </div>
        </div>
      </a>
    ))
  }
</div>

<style>
  .text-white {
    color: #fff !important;
  }
  .card {
    transition: transform 200ms cubic-bezier(0.25, 0.46, 0.45, 0.94),
      opacity 200ms cubic-bezier(0.25, 0.46, 0.45, 0.94);
    opacity: 1;
    box-shadow: 0;
  }
  .card:hover {
    cursor: pointer;
    transform: translate3d(10px, -5px, 0px);
    opacity: 0.9;
    box-shadow: 0 1rem 3rem rgba(0, 0, 0, 0.175) !important;
    transition: all 500ms;
  }
  svg {
    fill: white;
  }

  span.badge {
    position: absolute;
    width: 25px;
    height: 25px;
    right: -10px;
    top: -10px;
  }
  @keyframes fadeIn {
    from {
      opacity: 0;
    }

    to {
      opacity: 1;
    }
  }

  .fadeIn {
    -webkit-animation-name: fadeIn;
    animation-name: fadeIn;
  }
</style>
